{
  "name": "neuma",
  "private": false,
  "version": "0.1.0",
  "type": "module",
  "description": "A lightweight, task-based state management library for React",
  "keywords": [
    "react",
    "state-management",
    "typescript",
    "task",
    "observable"
  ],
  "author": "Kyuhyun Han",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kyuhyunhan/neuma.git"
  },
  "bugs": {
    "url": "https://github.com/kyuhyunhan/neuma/issues"
  },
  "homepage": "https://github.com/kyuhyunhan/neuma#readme",
  "files": [
    "dist"
  ],
  "main": "./dist/neuma.umd.cjs",
  "module": "./dist/neuma.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/neuma.js",
      "require": "./dist/neuma.umd.cjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "jest",
    "prepare": "npm run build"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/react": "^18.2.56",
    "@types/use-sync-external-store": "^0.0.6",
    "jest": "^29.7.0",
    "pathe": "^1.1.2",
    "ts-jest": "^29.1.2",
    "typescript": "^5.2.2",
    "vite": "^5.1.4"
  },
  "dependencies": {
    "use-sync-external-store": "^1.2.0",
    "vite-plugin-dts": "^3.7.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
